{{> header}}
<br>
<h2 style="display: flex; justify-content: center; align-items: center;">Giỏ Hàng</h2>

{{#if cart.items.length}}
<ul class="list-group" style="width: 90%; margin: auto;">
  {{#each cart.items}}
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
      <img src="{{this.productImage}}" alt="{{this.name}}" class="img-fluid"
        style="max-width: 100px; margin-right: 20px;">
      <div>
        <h5 class="mb-1">{{this.name}}</h5>
        <small>Số lượng: {{this.quantity}}</small><br>
        <small>Giá: {{this.price}}.000đ</small>
      </div>
    </div>
    <div>
      <form action="cart/delete/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
      </form>
    </div>
  </li>
  {{/each}}
</ul>
<div class="mt-3">
  <h4 class="text-right">Tổng giá trị đơn hàng: <strong>{{cart.totalPrice}}.000đ</strong></h4>
</div>
{{else}}
<p style="display: flex; justify-content: center; align-items: center;">Giỏ hàng của bạn hiện đang trống.</p>

{{/if}}


{{> footer}}